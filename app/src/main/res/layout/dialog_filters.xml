<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Filtros"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/dark_gray"
        android:layout_marginBottom="16dp" />

    <!-- Categorías -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Categorías"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/dark_gray"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_marginBottom="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <CheckBox
                android:id="@+id/filter_restaurants"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Restaurantes"
                android:textSize="16sp" />

            <CheckBox
                android:id="@+id/filter_cafes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cafeterías"
                android:textSize="16sp" />

            <CheckBox
                android:id="@+id/filter_plazas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Plazas"
                android:textSize="16sp" />

            <CheckBox
                android:id="@+id/filter_museums"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Museos"
                android:textSize="16sp" />

            <CheckBox
                android:id="@+id/filter_theaters"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Teatros"
                android:textSize="16sp" />

            <CheckBox
                android:id="@+id/filter_hotels"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Hoteles"
                android:textSize="16sp" />

            <CheckBox
                android:id="@+id/filter_bars"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Bares"
                android:textSize="16sp" />

            <CheckBox
                android:id="@+id/filter_parks"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Parques"
                android:textSize="16sp" />

        </LinearLayout>
    </ScrollView>

    <!-- Divider -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray_border"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="16dp" />

    <!-- Precio -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rango de Precio"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/dark_gray"
        android:layout_marginBottom="8dp" />

    <RadioGroup
        android:id="@+id/price_radio_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp">

        <RadioButton
            android:id="@+id/price_all"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Todos"
            android:textSize="16sp"
            android:checked="true" />

        <RadioButton
            android:id="@+id/price_low"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="$ - Económico"
            android:textSize="16sp" />

        <RadioButton
            android:id="@+id/price_medium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="$$ - Moderado"
            android:textSize="16sp" />

        <RadioButton
            android:id="@+id/price_high"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="$$$ - Costoso"
            android:textSize="16sp" />

    </RadioGroup>

    <!-- Divider -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray_border"
        android:layout_marginBottom="16dp" />

    <!-- Reseñas -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calificación Mínima"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/dark_gray"
        android:layout_marginBottom="8dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="16dp">

        <RatingBar
            android:id="@+id/rating_filter"
            style="?android:attr/ratingBarStyleIndicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:numStars="5"
            android:rating="0"
            android:stepSize="0.5"
            android:isIndicator="false" />

        <TextView
            android:id="@+id/rating_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:text="Todas"
            android:textSize="16sp"
            android:textColor="@color/dark_gray" />

    </LinearLayout>

    <!-- Divider -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray_border"
        android:layout_marginBottom="16dp" />

    <!-- Botones -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end"
        android:layout_marginTop="8dp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_clear_filters"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_marginEnd="8dp"
            android:minHeight="48dp"
            android:text="Limpiar"
            style="@style/Widget.Material3.Button.TextButton" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_apply_filters"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:minHeight="48dp"
            android:text="Aplicar"
            style="@style/Widget.Material3.Button" />

    </LinearLayout>

</LinearLayout>
